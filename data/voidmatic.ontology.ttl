@prefix :       <http://ns.inria.fr.kg/voidmatic#> .
@prefix rdf:	<http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:	<http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:	<http://www.w3.org/2002/07/owl#> .
@prefix xsd:	<http://www.w3.org/2001/XMLSchema#> .
@prefix sh:     <http://www.w3.org/ns/shacl#> .

:VoIDDescription a owl:Class ;
    rdfs:label "Represents the description of a dataset." .

:Metadata a owl:Class ;
    rdfs:label "Represent any metadata element in a dataset description." .

:StatementCategory a owl:Class ;
    rdfs:subClassOf :Metadata ;
    rdfs:label "Represents a partition of the statements describing a dataset." .

:DescriptionStatement a owl:Class ;
    rdfs:subClassOf :Metadata ;
    rdfs:label "Represents a statement or a group of statement that must be handled together, idependantly to the other statements of a category." .

:GroupedStatements a owl:Class ;
    rdfs:label "Represents a group of statements that must be handled together to be validated in a category" ;
    rdfs:subClassOf :DescriptionStatement .

:Statement a owl:Class ;
    rdfs:label "Represents a statement in a category." ;
    rdfs:subClassOf :DescriptionStatement .

:ValidationTest a owl:Class .

:SPARQLValidationTest a owl:Class ;
    rdfs:subClassOf :ValidationTest .

:GenerationProcess a owl:Class ;
    rdfs:label "Represents a compact description of the generation of a triple from the validated value of a statement field"@en .

:category a owl:ObjectProperty ;
    rdfs:domain :VoIDDescription ;
    rdfs:range :StatementCategory .

:validation a owl:ObjectProperty ;
    rdfs:label "Links a metadata elements with its validation test." ;
    rdfs:domain :Metadata ;
    rdfs:range :ValidationTest .

:generation a owl:ObjectProperty ;
    rdfs:label "Links a statement to its generation process." ;
    rdfs:domain :Statement ;
    rdfs:range :GenerationProcess .

:statement a owl:ObjectProperty ;
    rdfs:domain :StatementCategory ;
    rdfs:range :DescriptionStatement .

:minArity a owl:DatatypeProperty ;
    rdfs:range xsd:unsignedInteger ;
    rdfs:domain :Metadata .
:maxArity a owl:DatatypeProperty ;
    rdfs:comment "Negative numbers indicate infinity" ;
    rdfs:range xsd:integer ;
    rdfs:domain :Metadata .

:recommended a owl:DatatypeProperty ;
    rdfs:domain :Metadata ;
    rdfs:range xsd:boolean .

:suggestion a owl:DatatypeProperty ;
    rdfs:label "Links to the suggestions for the value of a statement"@en ;
    rdfs:domain :Statement ;
    rdfs:range :SuggestionProcess .

:priority a owl:DatatypeProperty ;
    rdfs:domain :StatementCategory ;
    rdfs:range xsd:integer .

:query a owl:DatatypeProperty ;
    rdfs:domain :SPARQLValidationTest ;
    rdfs:range sh:SPARQLAskExecutable .

# Pre-defined tests
:isIRI a :ValidationTest .
:isNotBlank a :ValidationTest .
:isDatetime a :ValidationTest .
:isDuration a :ValidationTest .
:isLiteral a :ValidationTest .

# Generation process pre-defined targets
:root a rdf:Resource ;
    rdfs:label "Designate the root of the description, i.e. the described dataset"@en .
:parent a rdfs:Resource ;
    rdfs:label "Designate the parent component in case of nested statement groups."@en .
:value a rdfs:Resource ;
    rdfs:label "Designate the validated value for the statement."@en .